<?xml version="1.0" encoding="utf-8"?>
<Override>
  <!-- UNIFORMS START -->
  <Item name="" identifier="captainsuniform1" aliases="captainsuniform" category="Equipment" cargocontaineridentifier="metalcrate" tags="smallitem,clothing" scale="0.5" impactsoundtag="impact_soft">
    <PreferredContainer primary="crewcab" />
    <Price baseprice="150" requiredfaction="coalition">
      <Price storeidentifier="merchantoutpost" minavailable="1" />
      <Price storeidentifier="merchantcity" multiplier="0.9" minavailable="1" />
      <Price storeidentifier="merchantresearch" minavailable="1" />
      <Price storeidentifier="merchantmilitary" minavailable="1" />
      <Price storeidentifier="merchantmine" minavailable="1" />
    </Price>
    <Deconstruct time="10">
      <Item identifier="organicfiber" />
    </Deconstruct>
    <InventoryIcon name="Captain's Uniform 1 Icon" texture="%ModDir%/Items/Jobgear/OutfitIcons.png" sourcerect="0,0,128,128" origin="0.5,0.5" />
    <Sprite name="Captain's Uniform 1" texture="Content/Items/Jobgear/MiscJobGear.png" sourcerect="247,209,125,77" depth="0.6" origin="0.5,0.5" />
    <Body width="100" height="50" density="15" friction="0.8" restitution="0.01" />
    <Wearable slots="Any,InnerClothes" msg="ItemMsgPickUpSelect">
      <sprite name="Captain's Uniform 1 Torso" texture="captain_1.png" limb="Torso" hidelimb="false" inherittexturescale="true" inheritorigin="true" inheritsourcerect="true" />
      <sprite name="Captain's Uniform 1 Right Hand" texture="captain_1.png" limb="RightHand" hidelimb="true" inherittexturescale="true" inheritorigin="true" inheritsourcerect="true" />
      <sprite name="Captain's Uniform 1 Left Hand" texture="captain_1.png" limb="LeftHand" hidelimb="true" inherittexturescale="true" inheritorigin="true" inheritsourcerect="true" />
      <sprite name="Captain's Uniform 1 Right Lower Arm" texture="captain_1.png" limb="RightArm" hidelimb="true" inherittexturescale="true" inheritorigin="true" inheritsourcerect="true" />
      <sprite name="Captain's Uniform 1 Left Lower Arm" texture="captain_1.png" limb="LeftArm" hidelimb="true" inherittexturescale="true" inheritorigin="true" inheritsourcerect="true" />
      <sprite name="Captain's Uniform 1 Right Upper Arm" texture="captain_1.png" limb="RightForearm" hidelimb="true" inherittexturescale="true" inheritorigin="true" inheritsourcerect="true" />
      <sprite name="Captain's Uniform 1 Left Upper Arm" texture="captain_1.png" limb="LeftForearm" hidelimb="true" inherittexturescale="true" inheritorigin="true" inheritsourcerect="true" />
      <sprite name="Captain's Uniform 1 Waist" texture="captain_1.png" limb="Waist" hidelimb="true" inherittexturescale="true" inheritorigin="true" inheritsourcerect="true" />
      <sprite name="Captain's Uniform 1 Right Thigh" texture="captain_1.png" limb="RightThigh" hidelimb="true" inherittexturescale="true" inheritorigin="true" inheritsourcerect="true" />
      <sprite name="Captain's Uniform 1 Left Thigh" texture="captain_1.png" limb="LeftThigh" hidelimb="true" inherittexturescale="true" inheritorigin="true" inheritsourcerect="true" />
      <sprite name="Captain's Uniform 1 Right Leg" texture="captain_1.png" limb="RightLeg" hidelimb="true" inherittexturescale="true" inheritorigin="true" inheritsourcerect="true" />
      <sprite name="Captain's Uniform 1 Left Leg" texture="captain_1.png" limb="LeftLeg" hidelimb="true" inherittexturescale="true" inheritorigin="true" inheritsourcerect="true" />
      <sprite name="Captain's Uniform 1 Left Shoe" texture="captain_1.png" limb="LeftFoot" hidelimb="true" inherittexturescale="true" inheritorigin="true" inheritsourcerect="true" />
      <sprite name="Captain's Uniform 1 Right Shoe" texture="captain_1.png" limb="RightFoot" hidelimb="true" inherittexturescale="true" inheritorigin="true" inheritsourcerect="true" />
      <damagemodifier armorsector="0.0,360.0" afflictionidentifiers="lacerations" damagemultiplier="0.95" />
      <damagemodifier armorsector="0.0,360.0" afflictionidentifiers="bitewounds, blunttrauma" damagemultiplier="0.9" />
    </Wearable>
  </Item>
  <Item identifier="captainsuniform1">
    <inherit identifier="captainsuniform1">
      <doinherit />
      <replace sel="./Wearable/sprite/@texture">%ModDir%/Items/Jobgear/Captain/captain_[GENDER]_[SPECIES]_1.png</replace>
      <replace sel="./Wearable/sprite[@limb='Torso']/@inheritsourcerect">false</replace>
      <add sel="./Wearable/sprite[@limb='Torso']/@sourcerect">160,0,112,256</add>
      <replace sel="./Wearable/sprite[@limb='Waist']/@inheritsourcerect">false</replace>
      <add sel="./Wearable/sprite[@limb='Waist']/@sourcerect">405,185,117,71</add>
      <replace sel="./Wearable/sprite[@limb='Waist']/@inheritorigin">false</replace>
      <add sel="./Wearable/sprite[@limb='Waist']/@origin">0.5,0.45</add>
      <add sel="./Wearable/sprite[@limb='Torso']/@depthlimb">Jaw</add>
      <replace sel="./Wearable/sprite/@hidelimb">true</replace>
      <replace sel="./Wearable/sprite[@limb='Torso']/@hidelimb">false</replace>
      <replace sel="./Wearable/sprite[@limb='RightThigh']/@hidelimb">false</replace>
      <replace sel="./Wearable/sprite[@limb='LeftThigh']/@hidelimb">false</replace>
      <replace sel="./Wearable/sprite[@limb='LeftFoot']/@hidelimb">false</replace>
      <replace sel="./Wearable/sprite[@limb='RightFoot']/@hidelimb">false</replace>
      <add sel="./Wearable/sprite[@limb='LeftFoot' or @limb='RightFoot']">
        <conditionalSprite target="person">
          <conditional hasSpecifiertag="furry" />
          <properties>
            <property name="hidelimb">false</property>
          </properties>
        </conditionalSprite>
        <conditionalSprite target="person">
          <conditional hasSpecifiertag="human" />
          <properties>
            <property name="hidelimb">true</property>
          </properties>
        </conditionalSprite>
      </add>
    </inherit>
    <ItemContainer capacity="4" maxstacksize="1" hideitems="true" />
  </Item>
</Override>